
// // Header Files
#include <stdio.h>
#include <conio.h>

// // Main Function Start
int main()
{
    float L1, L2, L3; 
    printf("Enter 3 values for lenghts of a triangle here => ");
    scanf("%f %f %f", &L1, &L2, &L3); 
    if (L1+L2 > L3 && L1+L3 > L2 && L2+L3 > L1) { 
        printf("\nEntered values for the triangle are OK!");
        printf("\nEntered lengths of the triangle are: \nL1 = %f, L2 = %f, L3 = %f", L1, L2, L3);
    }
    else { 
        printf("\nEntered values are not Acceptable!!!");
    }

    getch();
    return 0;
}
// // Main Function End
