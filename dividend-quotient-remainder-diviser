#include <stdio.h>
#include <conio.h>
#define PI 3.14
#define METER_TO_FEET 3.28

// // Header Files
#include <stdio.h>
#include <conio.h>
#include <math.h>

// // Main Function Start
int main()
{
    int a, b;
    double c, d;
    printf("Enter two numners here: ");
    scanf("%d %d", &a, &b);
    c = (a/b);
    d = (a%b);
    
    printf("\n c as quotient is: %lf", c);
    printf("\nremainder as d is: %lf", d);
    
    if(d == 0) { 
        printf("\nno reminaders left");
    }
    else {
        printf("\nthere is a remainder");
    }
    
    if( a%2 == 0) { 
        printf("\na is an even number");
    }
    else {
        printf("\na is odd number");
    }

    getch();
    return 0;
}
// // Main Function End
