// // Header Files
#include <stdio.h>
#include <conio.h>
#include <stdlib.h>

// // Main Function Start
int main()
{

   int a; 
   printf("enter a number value here and it should be between 1 and 7: ");
   scanf("%d", &a);
   if (a < 1 && a > 7) { 
       printf("\nInvalid Number - the number should be between 1 and 7"); 
   } 
   else { 
       switch (a)
       { 
           case 1: 
           printf("Sunday");
       break;
                  case 2: 
           printf("Monday");
       break;
                  case 3: 
           printf("Tuesday");
       break;
                  case 4: 
           printf("Wednesday");
       break;
                  case 5: 
           printf("Thursday");
       break;
                  case 6: 
           printf("Friday");
       break;
                  case 7: 
           printf("Saturday");
       break; 
       }
   }
    printf("\n");
    getch();
    return 0;
}
// // Main Function End
