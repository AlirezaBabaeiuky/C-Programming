// // Header Files
#include <stdio.h>
#include <conio.h>

// // Main Function Start
int main()
{
    int sum, pro1, pro2;
    pro1 = 1;
    for (int i = 1 ; i <= 4 ; i++) { 
        sum += i;
        pro1 = pro1 * i;
    }
    printf("\nsum of numbers is: %d", sum);
    printf("\nfactorial of numbers is: %d", pro1);
    printf("\n");
    getch();
    return 0;
}
// // Main Function End
