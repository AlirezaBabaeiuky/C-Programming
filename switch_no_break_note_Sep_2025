switch(i){



       case 1: printf(“case 1 \n”); break;

       case 2: printf(“case 2 \n”); 

       case 3: printf(“case 3 \n”);break;

       default: printf(“default case \n”);

      }; 

// note if you do not use break for case 2: then it will NOT jumpr out of the switch as a type of flow control loop and will also execute the rest so it will print both case 2 and case3!!! 
