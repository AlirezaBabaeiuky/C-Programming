#include <stdio.h>

int main()
{
    int arr[5] = {1, 9, 3, 6, 7};
    int size = 5; 
    int ele = 3; // element to be deleted 
    int idx = -1; //  
    
    printf("orginal array is: ");
    for (int i=0; i<size; i++) { 
        printf("%d ", arr[i]);
    }
    printf("\n");
    // 1. find the endex of the element to be deleted 
    for (int i=0; i<size; i++) { 
        if ( ele == arr[i]) { 
            idx = i;
        break; 
        }
    }
    
    // 2. shift one elemenet to the left when element is found 
    if (idx != -1) { 
        for (int i=idx; i<size-1; i++) { 
            arr[i] = arr[i+1];
        }
        // 3. Decreement the logical size of the array 
        size--;
    }
        
        printf("\nArray after deletion: ");
        for (int i=0; i<size; i++) { 
            printf("%d ", arr[i]);
        }

    return 0;
}
